<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.applicantpage.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo"
         />

    <TextView
        android:id="@+id/signin_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:text="Sign In"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <EditText
        android:id="@+id/ad_username_login"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:hint="username"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_text"
        android:layout_marginTop="20dp"
        app:cornerRadius="30dp"/>

    <EditText
        android:id="@+id/ad_password_login"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_username_login"
        android:layout_marginTop="30dp"
        app:cornerRadius="30dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:backgroundTint="#5669FF"
        android:text="Sign in"
        app:cornerRadius="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_password_login" />


    <TextView
        android:id="@+id/text_dont_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/lato_bold"
        android:text="Don't have an account?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <TextView
        android:id="@+id/Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="@font/lato_bold"
        android:textColor="#5669FF"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/text_dont_have_an_account"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />





</androidx.constraintlayout.widget.ConstraintLayout>