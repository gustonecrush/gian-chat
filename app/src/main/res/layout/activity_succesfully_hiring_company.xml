<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.companypage.SuccesfullyHiringCompanyActivity">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentScrim="@android:color/transparent"
        app:expandedTitleGravity="center"
        app:expandedTitleMarginBottom="16dp"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="64dp"
        app:expandedTitleMarginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:title="Succesfully Hiring" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="673dp"
        app:layout_constraintTop_toBottomOf="@+id/collapsingToolbarLayout"
        tools:layout_editor_absoluteX="1dp"
        tools:listitem="@layout/item_list_hiring"/>


</androidx.constraintlayout.widget.ConstraintLayout>